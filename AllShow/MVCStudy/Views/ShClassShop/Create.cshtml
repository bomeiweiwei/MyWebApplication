@model IEnumerable<MVCStudy.Models.SHCLASS>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
        function PreviewImage1(imgFile) {
            var pattern = /(\.*.jpg$)|(\.*.png$)|(\.*.jpeg$)|(\.*.gif$)|(\.*.bmp$)/;
            if (!pattern.test(imgFile.value)) {
                alert("只支援jpg/jpeg/png/gif/bmp之格式檔案");
                imgFile.focus();
            }
            else {
                var path;
                if (document.all) {//IE
                    imgFile.select();
                    path = document.selection.createRange().text;
                    document.getElementById("imgPreview1").innerHTML = "";
                    document.getElementById("imgPreview1").style.filter = "progid:DXImageTransform.Microsoft.AlphaImageLoader(enabled='true',sizingMethod='scale',src=\"" + path + "\")";
                }
                else//FF
                {
                    path = URL.createObjectURL(imgFile.files[0]);
                    document.getElementById("imgPreview1").innerHTML = "<img src='" + path + " '  width='100' height='100'/>";
                }
            }
        }
</script>

<h2>新增商店</h2>
<form method="post" action="@Url.Action("Create")" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">審查人員</label>
            <div class="col-md-10">
                @Html.DropDownList("empno", (IEnumerable<SelectListItem>)ViewBag.empList)
                @*@Html.DropDownList("empno", String.Empty)*@
            </div>
        </div>

        <div class="form-group">
            <label for="shclassno" class="control-label col-md-2">商店類別</label>
            <div class="col-md-10">
                <select id="shclassno" name="shclassno" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item.shclassno">@item.shclassname</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="shthepic" class="control-label col-md-2">佈景主題圖示</label>
            <div class="col-md-10">
                <input type="text" id="shthepic" name="shthepic" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shname" class="control-label col-md-2">商店名稱</label>
            <div class="col-md-10">
                <input type="text" id="shname" name="shname" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shaccount" class="control-label col-md-2">廠商帳號</label>
            <div class="col-md-10">
                <input type="text" id="shaccount" name="shaccount" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shpwd" class="control-label col-md-2">廠商密碼</label>
            <div class="col-md-10">
                <input type="password" id="shpwd" name="shpwd" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shboss" class="control-label col-md-2">負責人</label>
            <div class="col-md-10">
                <input type="text" id="shboss" name="shboss" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shcontact" class="control-label col-md-2">聯絡人</label>
            <div class="col-md-10">
                <input type="text" id="shcontact" name="shcontact" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shaddress" class="control-label col-md-2">地址</label>
            <div class="col-md-10">
                <input type="text" id="shaddress" name="shaddress" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shtel" class="control-label col-md-2">廠商電話</label>
            <div class="col-md-10">
                <input type="text" id="shtel" name="shtel" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shemail" class="control-label col-md-2">聯絡人信箱</label>
            <div class="col-md-10">
                <input type="email" id="shemail" name="shemail" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shabout" class="control-label col-md-2">關於我們</label>
            <div class="col-md-10">
                <input type="text" id="shabout" name="shabout" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shlogopic" class="control-label col-md-2">LOGO圖片</label>
            <div class="col-md-10">
                <div id="imgPreview1">
                    <img width="100" height="100" src="#">
                </div>
                <input type="file" name="file" onchange="PreviewImage1(this)">
                @*<input type="text" id="shlogopic" name="shlogopic" class="form-control" />*@
                @Html.Hidden("shlogopic","")
            </div>
        </div>

        <div class="form-group">
            <label for="shurl" class="control-label col-md-2">商店Url</label>
            <div class="col-md-10">
                <input type="url" id="shurl" name="shurl" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label for="shadstate" class="control-label col-md-2">店內廣告狀態</label>
            <div class="col-md-10">
                <input type="radio" name="shadstate" value="0" checked>未顯示
                <input type="radio" name="shadstate" value="1">顯示
            </div>
        </div>

        <div class="form-group">
            <label for="shadtitle" class="control-label col-md-2">店內廣告標題</label>
            <div class="col-md-10">
                <input type="text" id="shadtitle" name="shadtitle" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shadpic" class="control-label col-md-2">店內廣告圖片</label>
            <div class="col-md-10">
                <input type="text" id="shadpic" name="shadpic" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shpopshop" class="control-label col-md-2">熱門商店</label>
            <div class="col-md-10">
                <input type="radio" name="shpopshop" value="0" checked>否
                <input type="radio" name="shpopshop" value="1">是
            </div>
        </div>

        <div class="form-group">
            <label for="shcheckstate" class="control-label col-md-2">審核狀態</label>
            <div class="col-md-10">
                <input type="radio" name="shcheckstate" value="0" checked>未審查
                <input type="radio" name="shcheckstate" value="1">已通過審查
            </div>
        </div>

        <div class="form-group">
            <label for="shstartdate" class="control-label col-md-2">商店營業日期</label>
            <div class="col-md-10">
                <input type="date" id="shstartdate" name="shstartdate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shenddate" class="control-label col-md-2">商店結束日期</label>
            <div class="col-md-10">
                <input type="date" id="shenddate" name="shenddate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shcheckdate" class="control-label col-md-2">審核通過日</label>
            <div class="col-md-10">
                <input type="date" id="shcheckdate" name="shcheckdate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shpwdstate" class="control-label col-md-2">廠商帳號狀態</label>
            <div class="col-md-10">
                <input type="radio" name="shpwdstate" value="0" checked>啟用
                <input type="radio" name="shpwdstate" value="1">停用
            </div>
        </div>

        <div class="form-group">
            <label for="shstoprightstartdate" class="control-label col-md-2">停權起始日</label>
            <div class="col-md-10">
                <input type="date" id="shstoprightstartdate" name="shstoprightstartdate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="shstoprightenddate" class="control-label col-md-2">停權截止日</label>
            <div class="col-md-10">
                <input type="date" id="shstoprightenddate" name="shstoprightenddate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增商店" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
