@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/MainLayoutPage.cshtml";
}

@section head
{
    <meta charset="utf-8"/>
    <link href="~/Content/Table.css" rel="stylesheet" type="text/css" />
    }

@section extra
{

    }
<div>
    @using (Html.BeginForm("CheckUserLogin", "AllShowMember"))
    {
        <table style="width:400px;">
            <tr>
                <th>
                    使用者登入
                </th>
            </tr>
            <tr>
                <td>
                    帳號：<input id="Text1" type="text" name="mememail" value="@ViewBag.Mail"/>
                </td>
                <td>
                    <span style="color:red">@TempData["mailError"]</span>
                </td>
            </tr> 
            <tr>
                <td>
                    密碼：<input id="Text2" type="password" name="mempwd"/>
                </td>
                <td>
                    <span style="color:red">@TempData["pwdError"]</span>
                </td>
            </tr> 
            <tr>
                <td>
                    <input id="Submit1" type="submit" style="width:130px;" value="送出" />           
                </td>
                <td>
                    <span style="color:red">@TempData["memError"]</span>
                </td>
            </tr>    
        </table>
    }
</div>
